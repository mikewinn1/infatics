							a(href='./about.html') About
						li
							a(href='./contact.html') Contact

		//======================== Title ========================
		.container
			header.jumbotron.subhead
				h1 Create a Campaign
				p.lead Welcome to Campaign Creation Tool. 

			//======================= SubNav ====================
			.subnav
				ul.nav.nav-pills
					li.active
						a(href='#Audience') Choose your Audience
					li
						a(href='#Location') Choose your Location
					li
						a(href='#Upload') Upload your Ads			
					li
						a(href='#Budget') Choose your Budget

			//======================= Overview =====================
			
			h2 1. Choose your Audience
			.row#Audience	
				.span9	
					form.well
						.row
							.span2	
								h5 Gender
									label(class='checkbox') Male
										input(type='checkbox', name='gender', value='male', checked)
									label(class='checkbox') Female
										input(type='checkbox', name='gender', value='female', checked) 
							.span3
								h5 Age Band
									label(class='checkbox') 0-14
										input(type='checkbox', name='age', value='1' ) 
									label(class='checkbox') 15-24
										input(type='checkbox', name='age', value='15', checked ) 
									label(class='checkbox') 25-34
										input(type='checkbox', name='age', value='25', checked ) 
									label(class='checkbox') 35-44
										input(type='checkbox', name='age', value='35', checked ) 
									label(class='checkbox') 45-54
										input(type='checkbox', name='age', value='45' ) 
									label(class='checkbox') 55+
										input(type='checkbox', name='age', value='55' ) 

							.span3
								h5 Income Bracket
									label(class='checkbox') A  - Upper Middle Class
										input(type='checkbox', name='income', value='A', checked) 
									label(class='checkbox') B  - Middle Class
										input(type='checkbox', name='income', value='B', checked) 
									label(class='checkbox') C1 – Lower Middle Class
										input(type='checkbox', name='income', value='C1', checked) 
									label(class='checkbox') C2 – Skilled working class
										input(type='checkbox', name='income', value='C2') 
									label(class='checkbox') D  - unskilled manual class
										input(type='checkbox', name='income', value='D') 
									label(class='checkbox') E  – low income earners
										input(type='checkbox', name='income', value='E') 
				

				//======================= Quick Snapshot =====================	
				.span2.well
					h3 Total Audience	
					ul
						li 130,000 People 
						li in london
						li Ages 15-44
				
			.row#Location		
				.span9
					h2 2. Choose your Location and Times
					form.well
						.row
							.span4
								h5 Location 
								input(type='text', class="span3", name='location', value='london')
								label(class='radio') All of this location
									input(type='radio', name='location', value='all', checked) 
								label(class='radio') Placements close to...  
									input(type='radio', name='location', value='close') 
								label(class='radio') Let me choose 
									input(type='radio', name='location', value='choose') 

							
								h5 Times
									label(class='radio') All Times
										input(type='radio', name='time', value='all', checked) 
									label(class='radio') Let me Choose...
										input(type='radio', name='time', value='choose') 
							.span4
								<iframe width="300" height="200" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="http://maps.google.ie/maps?f=q&amp;source=s_q&amp;hl=en&amp;geocode=&amp;q=london&amp;aq=&amp;sll=53.13359,-8.305664&amp;sspn=7.055015,14.238281&amp;ie=UTF8&amp;hq=&amp;hnear=London,+United+Kingdom&amp;t=m&amp;z=10&amp;ll=51.508129,-0.128005&amp;output=embed"></iframe>
			.row#Upload
				.span9		
					h2 3. Upload Your Ad
					form.well 	
						.row
							.span4

								label Ad1 
									input(type='text', name='location', value='AxeBeach')  	
								label Ad2 
									input(type='text', name='location', value='Axe Angels')  
								
								a(href='/') Upload More Ads...

							.span2
								img(id='ad1', width='100px', height='160px', src='http://pzrservices.typepad.com/advertisingisgoodforyou/images/2007/08/14/spoof_ad_for_axe.jpg')

							.span2
								img(id='ad1', width='100px', height='160px', src='http://pzrservices.typepad.com/advertisingisgoodforyou/images/2007/08/14/spoof_ad_for_axe.jpg')


			.row#Budget
				.span		
					h2 4. Budget and Bidding
					
					form.well
						label Budget 
							input(type='text', name='budget', value='10,000')   
						label Max bid 
							input(type='text', name='bid', value='10.00 / CPM')    
						a(href='/') Advanced Bidding Options

			.row	
				.span9	
					.form-actions 
						button(type='submit', class='btn btn-primary') Place Order
						button(class='btn') Cancel

					

